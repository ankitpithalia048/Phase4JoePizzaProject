@model IEnumerable<PizzaModel>

@{
    ViewData["Title"] = "Index";
}

<div class="my-main">

</div>
<br />

<h1>Joe Pizza Menu</h1>
<hr />
<br />
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        { 
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=" @Html.DisplayFor(modelItem => item.Img_Url)" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Pizza_Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary btn-lg btn-block">Buy Now</a>
                </div>
            </div>
        </div>
        <br /><br />
        }
        </div>
</div>

